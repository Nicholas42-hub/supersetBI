<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 https://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip-assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>

        <!-- Copy 1: Dashboard -->
        <fileSet>
            <directory>dashboard_export_20240724T154058</directory>
            <outputDirectory>dashboard_export_dashboard</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>

        <!-- Copy 2: SQL -->
        <fileSet>
            <directory>dashboard_export_20240724T154058</directory>
            <outputDirectory>dashboard_export_sql</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0644</fileMode>
            <filters>
                <filter>
                    <target>dashboard_export_sql/metadata.yaml</target>
                    <replacements>
                        <replacement>
                            <token>type:.*</token>
                            <value>type: sql</value>
                        </replacement>
                    </replacements>
                </filter>
            </filters>
        </fileSet>

        <!-- Copy 3: Charts -->
        <fileSet>
            <directory>dashboard_export_20240724T154058</directory>
            <outputDirectory>dashboard_export_charts</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0644</fileMode>
            <filters>
                <filter>
                    <target>dashboard_export_charts/metadata.yaml</target>
                    <replacements>
                        <replacement>
                            <token>type:.*</token>
                            <value>type: charts</value>
                        </replacement>
                    </replacements>
                </filter>
            </filters>
        </fileSet>

    </fileSets>
</assembly>